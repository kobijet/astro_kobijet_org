---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle } = Astro.props;

const title = () => {
    const titleArr = pageTitle.split(" ");
    let title = "/";
    for (let i = 0; i < titleArr.length; i++) {
        title += titleArr[i].toLowerCase() + "_";
    }
    return title;
}
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle} | kobijet.org</title>
        <meta name="description" content="An exciting collection of projects, thoughts, and other things made by Kobi Rogers" />
        
        <meta property="og:site_name" content="Game Designer Portfolio and Blog | kobijet.org" />
        <meta property="og:title" content="Game Designer Portfolio and Blog | kobijet.org" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="kobijet.org" />
        <meta property="og:image" content="/og-image.png" />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:image:alt" content="kobijet.org in black text on a green field" />
        <meta property="og:image:width" content="512" />
        <meta property="og:image:height" content="512" />
        
        <link rel="icon" href="/kobijet_favicon.png" sizes="any" />
        <link rel="apple-touch-icon" href="/kobijet_favicon.png">
        
        <meta name="theme-color" content="#fafafa" />
    </head>
    <body>
        <div id="content">
            <Header />
            
            <h2>{title() != null && title()}</h2>
            <slot />
            
            <Footer />
        </div>
    </body>
</html>